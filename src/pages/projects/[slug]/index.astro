---
export const prerender = true 
import { getCollection } from "astro:content";
import slugify from "@utils/slugify";
import Layout from "@layouts/Layout.astro";
import Tag from "@components/Tag.astro";
import Datetime from "@components/Datetime.astro";
/* @ts-ignore */
import { Icon } from "astro-icon";
import { Technologies, type TechnologyKey } from "../../../types";
import { slugifyStr } from "@utils/slugify";
import ContentTags from "@components/ContentTags.astro";
import { Image } from "astro-preload/components";




export async function getStaticPaths() {
  const projects = await getCollection("projects");
  const projectResults = projects.map(project => ({
    params: { slug: project.slug },
    props: { project },
})
);


  return [...projectResults];
}

const { project } = Astro.props;
const { Content } = await project.render();


const { slug, data: {title, description, cover, stack, tags, startDate, endDate}} = project;


const ogUrl = new URL(cover ?? `/projects/${slug}.png`, Astro.url.origin).href;



---

<Layout
  title={title}
  description={description}
  ogImage={ogUrl}
>

  <main id="main-content">
        <div class="mx-auto flex w-full  justify-start px-2">
      <button
      class=" mb-2 mt-8 flex hover:opacity-75"
      onclick="history.back()"
      >
      <svg xmlns="http://www.w3.org/2000/svg"
      ><path
      d="M13.293 6.293 7.586 12l5.707 5.707 1.414-1.414L10.414 12l4.293-4.293z"
      ></path>
    </svg><span>back</span>
  </button>
    </div>


    <h1 transition:name={slug} class="post-title">{title}</h1>
    <Datetime datetime={startDate} endDate={endDate} size="lg" class="my-2" />
    <Image transition:name={slug+":cover"} name={slug+".png"} url={cover} class="my-5 rounded-xl aspect-video w-full" alt="" />
    <p transition:name={slug+":desc"}>{description}</p>
    <h2 class="mt-5 mb-3 text-xl font-bold">Tech Stack</h2>
    <ul class="flex flex-col gap-7">
      {(stack as TechnologyKey[]).map((t) =>
      {
       const { name, icon, url, description } = Technologies[t];
       return (
        <li>
          <a class="inline-flex gap-2" href={url}>
            <Icon transition:name={slug+":stack:"+name}  class="h-8 w-8" name={icon} />
            <h3 class="underline font-bold">{name}</h3>:
            <span class="font-thin">{description}</span>
            </a>
        </li>
        )
      }
      )}

    </div>
    <article id="article" role="article" class="prose mx-auto mt-8 max-w-3xl">
      <Content />
    </article>

      <ContentTags type="category" tags={tags} />
  </main>
</Layout>

<style>
  main {
    @apply mx-auto w-full  px-4 pb-12;
  }
  .post-title {
    @apply text-2xl font-semibold text-skin-accent;
  }
  .tags-container {
    @apply my-8;
  }
</style>
