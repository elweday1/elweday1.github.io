---
import Layout from "@layouts/Layout.astro";
import Card from "@components/ProjectCard.astro";
import slugify from "@utils/slugify";

import  {type CollectionEntry , getCollection} from "astro:content";

export interface Props {
  pageNum?: number;
  tags?: string[];
}
const allProjects: CollectionEntry<"projects">[] = await getCollection("projects");

---

<Layout title="projects" description="List of some of technical projects I did.">
  <h1 class="text-2xl tracking-wider sm:text-3xl text-start py-6">Projects</h1>
    <ul class="grid sm:grid-cols-2 place-self-center place-items-center  gap-2">
      {
        allProjects.map(({ data }) => (
          <Card class="size-[25rem]" href={`/my-projects/${slugify(data)}`} frontmatter={data} />
        ))
      }
    </ul>
</Layout>


<style>

  section{
    @apply justify-self-start  w-full flex flex-col gap-2  
  }
  
    h2 {
      @apply text-xl tracking-wider sm:text-2xl  text-start ;
    }
  </style>
  