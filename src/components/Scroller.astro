---
export interface Props {
  class?: string;
}
---


<hr class="hidden" id="scroller" aria-hidden="true" />

<script>
  
  document.addEventListener("astro:page-load", ()=>{
    const THRESHOLD = 1200; 
    const height = (document?.querySelector("main")?.children[1].getBoundingClientRect()?.height || 0) 
    const scroller = document?.getElementById("scroller")
    if (height >= THRESHOLD ){
      scroller?.classList.add("scroll-watcher")
      scroller?.classList.remove("hidden")

    }
  })


</script>
  <style>
  
  
    @keyframes scroll-watcher {
      to {scale: 1 1;}
    }
  
    .scroll-watcher {
        @apply h-1 rounded-full bg-skin-accent top-0  sticky z-[999] origin-left w-full  border-skin-line mx-auto ;
        animation: scroll-watcher linear;
        animation-timeline:  scroll();
        scale: 0 1;
    }
  </style>