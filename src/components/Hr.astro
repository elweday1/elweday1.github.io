---
export interface Props {
  noPadding?: boolean;
  ariaHidden?: boolean;
  scroller?: boolean;
}

const { noPadding = false, ariaHidden = true,  scroller=false} = Astro.props;
---

  <hr class={
  `z-[999] origin-left border-skin-line ${scroller ? "h-1 bg-skin-accent scroll-watcher top-0 left-0 sticky  " : "bg-yellow-500"} mx-auto ${noPadding ? "px-0" : "px-4"}  `
  } aria-hidden={ariaHidden} />

<style>
  .scroll-watcher {
    animation: scroll-watcher linear;
    animation-timeline:  scroll();
    scale: 0 1;
  }
  @keyframes scroll-watcher {
    to {scale: 1 1;}
  }

  @container (min-height: 700px) {
   /*
    condition screen size >= 700px to start adding scroll watcher.
   */  
  }
</style>